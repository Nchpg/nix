{
    "suggest.noselect": true,
    "languageserver": {
        "c": {
            "command": "clangd",
            "args": [
                "--enable-config"
            ],
            "rootPatterns": [
                "compile_flags.txt",
                "compile_commands.json"
            ],
            "filetypes": [
                "c",
                "cc",
                "cpp",
                "c++",
                "objc",
                "objcpp"
            ]
        },
        "nix": {
            "command": "nil",
            "filetypes": [
                "nix"
            ],
            "rootPatterns": [
                "flake.nix"
            ],
            "settings": {
                "nil": {
                    "formatting": {
                        "command": [
                            "nixpkgs-fmt"
                        ]
                    }
                }
            }
        },
        "python": {
            "command": "pyright-langserver",
            "args": ["--stdio"],
            "filetypes": ["python"],
            "settings": {
                "python": {
                    "pythonPath": "/usr/bin/python3",
                    "linting": {
                        "enabled": true,
                        "pylintEnabled": true,
                        "flake8Enabled": true
                    },
                    "formatting": {
                        "provider": "black",
                        "blackArgs": ["--line-length", "88"]
                    },
                    "analysis": {
                        "typeCheckingMode": "basic"
                    }
                }
            }
        }
    },
    "coc.preferences.formatOnSave": true
}